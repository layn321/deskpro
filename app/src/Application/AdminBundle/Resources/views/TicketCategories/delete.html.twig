{% extends 'AdminBundle::layout.html.twig' %}
{% block pagetitle %}
	<h1>{{ phrase('admin.tickets.delete_ticket_category') }}</h1>
	<nav>
		<a class="clean-white" href="{{ path('admin_ticketcats') }}">&larr; {{ phrase('admin.tickets.back_to_ticket_categories') }}</a>
	</nav>
{% endblock %}
{% block page %}

{% if category.children|length %}
	<p>{{ phrase('admin.tickets.confirm_delete_top_level', {'title':category.title}) }}:</p>

	<ul class="bullet-list">
		{% for c in category.children %}
			<li>{{ c.title }}</li>
		{% endfor %}
	</ul>

	<p>{{ phrase('admin.tickets.notice_cats_will_be_removed') }}</p>
{% else %}
	<p>{{ phrase('admin.tickets.confirm_delete', {'title':category.title}) }}</p>

	<p>{{ phrase('admin.tickets.notice_cat_will_be_removed') }}</p>
{% endif %}

<a class="btn" href="{{ path('admin_ticketcats_dodel', {'category_id': category.id, 'security_token': security_token('delete_ticket_category')}) }}">{{ phrase('admin.general.confirm_delete') }}</a>

{% endblock %}
