{% extends 'AdminBundle::layout.html.twig' %}
{% block pagebar %}
	<ul>
		<li>{{ phrase('admin.general.apps') }}</li>
	</ul>
{% endblock %}
{% block page %}

<div class="portal-toggle inline tickets">
	<a class="toggle-btn tickets tipped" title="The tickets app is a core feature of DeskPRO and cannot be disabled." data-tipped-options="showOn: 'click'" style="cursor:default;"></a>
	<h3>{{ phrase('admin.general.apps_tickets') }}</h3>
	<p>
		{{ phrase('admin.general.apps_tickets_explain') }}
	</p>
</div>

