	<p>
		{{ phrase('admin.general.apps_crm_explain') }}
	</p>
</div>

<div class="portal-toggle inline chat">
	{% if app.getSetting('core.apps_chat') %}
		<a class="toggle-btn" href="{{ path('admin_apps_toggle', {app: 'chat', enable: '0'}) }}"><em>{{ phrase('admin.portal.click_to_disable') }}</em></a>
	{% else %}
		<a class="toggle-btn disabled" href="{{ path('admin_apps_toggle', {app: 'chat', enable: '1'}) }}"><em>{{ phrase('admin.portal.click_to_enable') }}</em></a>
