<div class="message-attachments-delete-overlay overlay">
	<div class="overlay-title">
		<h4>{{ phrase('agent.tickets.delete_attachments') }}</h4>
	</div>

	<div class="overlay-content" data-confirm="{{ phrase('agent.tickets.delete_attach_confirm') }}">
		<ul class="attachment-list">
		{% for attachment in attachments %}
			<li class="attachment-row {% if attachment.blob.isImage() %}is-image{% else %}icon icon-attachment icon-filetype-{{attachment.blob.extension|default('none')}}{% endif %}">
				{% if attachment.blob.isImage() %}
					<a href="{{ attachment.blob.download_url }}" target="_blank"><img src="{{ path('serve_blob', {'blob_auth_id': attachment.blob.auth_id, 'filename': attachment.blob.filename_safe, 's': 50, 'size-fit': '1'}) }}" alt="" class="preview" /></a>
				{% endif %}
				<a href="{{ attachment.blob.download_url }}" target="_blank">{{attachment.blob.filename}}</a>
				<span class="size">({{ attachment.blob.readable_filesize }})</span>
				<div class="attachment-buttons">
					<span class="is-not-loading"><span class="delete-trigger" data-attachment-id="{{ attachment.id }}"></span></span>
					<span class="is-loading"><img src="{{ asset('images/spinners/loading-small.gif') }}" /></span>
				</div>
			</li>
		{% endfor %}
		</ul>
	</div>
</div>