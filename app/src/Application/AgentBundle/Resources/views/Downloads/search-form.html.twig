<section class="list-top-area news">
	{% if not hide_terms_summary %}
	<div class="summary">
		<span class="edit" title="{{ phrase('agent.general.edit_search_terms') }}">{{ phrase('agent.general.add_search_term') }}</span>
		{% for line in terms_summary %}
			{{line}}{% if not loop.last %},{% endif %}
		{% else %}
			{{ phrase('agent.publish.all_downloads') }}
		{% endfor %}
	</div>
	{% endif %}
	<div class="form-panel" {% if not show_search_form %}style="display: none"{% endif %}>
		<form action="{{ path('agent_downloads_list') }}" method="post" class="download-search-form">
			<div class="row" style="margin-top: 0;">
				<div class="search-form" id="criteria_list">
					<div class="search-terms"></div>
					<div class="term"><span class="add-term">+</span> {{ phrase('agent.general.add_search_term') }}</div>
				</div>
				{% include 'DeskPRO:Common:download-search-criteria.html.twig' with { 'classname': 'search-builder-tpl', 'term_options': download_options } %}
			</div>
			<div style="text-align: center;"><button class="dp-button x-small">{{ phrase('agent.general.search') }}</button></div>
		</form>
	</div>

	{% if search_form %}
	<script type="text/x-deskpro-plain" class="search-form-data">{{ search_form|json_encode|raw }}</script>
	{% endif %}

</section>
