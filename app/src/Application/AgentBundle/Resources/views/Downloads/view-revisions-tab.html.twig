<div class="check-grid item-list revision-compare-table">
	<table width="100%">
		<thead>
			<tr>
				<th>&nbsp;</th>
				<th style="text-align: left">{{ phrase('agent.general.revision') }}</th>
				<th width="10">{{ phrase('agent.general.compare') }}&nbsp;</th>
			</tr>
		</thead>
		<tbody>
			{% for rev in download.revisions %}
				<tr class="rev-{{rev.id}}">
					<td width="30">{{ loop.index }}</td>
					<td>
						{{ phrase('agent.general.by_name', {'name': rev.person.display_name}) }},
						{{ rev.date_created|date('day') }}
					</td>
					<td width="10" align="center">
						<input type="checkbox" class="rev-compare-check" value="{{rev.id}}" />
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>

{% if download.revisions|length >= 2 %}
	<div style="text-align: right;padding-top: 8px;">
		<button class="clean-white compare-trigger">{{ phrase('agent.publish.compare_selected') }}</button>
	</div>
{% endif %}
