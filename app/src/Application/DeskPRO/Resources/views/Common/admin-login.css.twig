#dp_logo {
	position: absolute;
	bottom: 0;
	right: 0;
	bottom: 0;
	left: 0;
	z-index: 99900;
	display: block;

	height: 59px;
	text-indent: -10000px;
	overflow: hidden;

	background: url({{ asset('images/dp-logo-faded.png') }}) 50% 50% no-repeat;

	padding: 15px 0 15px 0;
}

#dp_logo:hover {
	text-decoration: none;
	background-image: url({{ asset('images/dp-logo-color.png') }});
}

#dp_login {
	position: absolute;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	z-index: 9999;

	background-color: #DFE5EB;
	background: rgb(158,166,175); /* Old browsers */
	background: -moz-linear-gradient(top, rgba(158,166,175,1) 0%, rgba(213,218,224,1) 15%, rgba(223,229,235,1) 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(158,166,175,1)), color-stop(15%,rgba(213,218,224,1)), color-stop(100%,rgba(223,229,235,1))); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top, rgba(158,166,175,1) 0%,rgba(213,218,224,1) 15%,rgba(223,229,235,1) 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top, rgba(158,166,175,1) 0%,rgba(213,218,224,1) 15%,rgba(223,229,235,1) 100%); /* Opera11.10+ */
	background: -ms-linear-gradient(top, rgba(158,166,175,1) 0%,rgba(213,218,224,1) 15%,rgba(223,229,235,1) 100%); /* IE10+ */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#9ea6af', endColorstr='#dfe5eb',GradientType=0 ); /* IE6-9 */
	background: linear-gradient(top, rgba(158,166,175,1) 0%,rgba(213,218,224,1) 15%,rgba(223,229,235,1) 100%); /* W3C */
	text-align: center;
}

#dp_login .msg-outer {
	-webkit-border-radius: 4px;
	-moz-border-radius: 4px;
	border-radius: 4px;

	width: 550px;

	position: absolute;
	top: 50%;
	left: 50%;
	margin-top: -120px;
	margin-left: -275px;

	-webkit-box-shadow: 1px 1px 6px 1px rgba(50, 50, 50, 0.6);
	-moz-box-shadow: 1px 1px 6px 1px rgba(50, 50, 50, 0.6);
	box-shadow: 1px 1px 6px 1px rgba(50, 50, 50, 0.6);

	border: 1px solid #C3CEE1;
}

#dp_login .msg {
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px;
	background-color: #fff;

	border: 1px solid #6B7A9F;

	-webkit-box-shadow: inset 0px 0px 4px 1px rgba(50, 50, 50, 0.3);
	-moz-box-shadow: inset 0px 0px 4px 1px rgba(50, 50, 50, 0.3);
	box-shadow: inset 0px 0px 4px 1px rgba(50, 50, 50, 0.3);

	padding:  20px;
	z-index: 99999;
	position: relative;
}

#dp_login h1 {
	font-family: 'Myriad Pro', 'Myriad', helvetica, arial, sans-serif;
	font-size: 17px;
	text-align: left;
	color: #000;
	padding: 0;
	margin: 0;
	margin-bottom: 15px;
}

#dp_login dl {
	margin: 0;
	padding: 0;
}
#dp_login dt {
	clear: left;
	margin: 0;
	padding: 0;
	margin-top: 8px;

	font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
	font-size: 13px;
	font-weight: bold;

	float: left;
	width: 120px;
	line-height: 33px;
	text-align: right;
}
#dp_login dd {
	margin: 0;
	padding: 0;
	margin-top: 8px;
	margin-left: 15px;

	font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
	font-size: 13px;
	font-weight: bold;

	float: left;
	line-height: 33px;

	width: 330px;
	text-align: left;
}

#dp_login dd input.text {
	padding: 5px;
	border: solid 1px #B6BABF;
	outline: 0;
	font: normal 13px/100% Verdana, Tahoma, sans-serif;
	background: #FFFFFF;
	background: -webkit-gradient(linear, left top, left 25, from(#FFFFFF), color-stop(4%, #EEEEEE), to(#FFFFFF));
	background: -moz-linear-gradient(top, #FFFFFF, #EEEEEE 1px, #FFFFFF 25px);
	box-shadow: rgba(0,0,0, 0.1) 0px 0px 8px;
	-moz-box-shadow: 0px 0px 8px rgba(0,0,0, 0.1);
	-webkit-box-shadow: 0px 0px 8px rgba(0,0,0, 0.1);
	box-shadow: 0px 0px 8px rgba(0,0,0, 0.1);
	width: 330px;

	-webkit-border-top-left-radius: 3px;
	-webkit-border-top-right-radius: 3px;
	-webkit-border-bottom-right-radius: 3px;
	-webkit-border-bottom-left-radius: 3px;
	-moz-border-radius-topleft: 3px;
	-moz-border-radius-topright: 3px;
	-moz-border-radius-bottomright: 3px;
	-moz-border-radius-bottomleft: 3px;
	border-top-left-radius: 3px;
	border-top-right-radius: 3px;
	border-bottom-right-radius: 3px;
	border-bottom-left-radius: 3px;
}

#dp_login dd.btn {
	text-align: left;
}

#dp_login dd.btn.lost a {
	margin-left: 8px;
	font-size: 11px;
	color: #B6BABF;
	text-decoration: none;
}

#dp_login dd.btn.lost a:hover {
	color: #000;
	text-decoration: underline;
}

#dp_login dd cite {
	background-repeat: no-repeat;
	background-position: 0 50%;
	padding-left: 36px;
	font: normal 13px/33px Verdana, Tahoma, sans-serif;
	display: block;
}

#dp_login button {
	position: relative;
	background: #f0f2f3;
	backgroundt: repeat-x;
	background: -khtml-gradient(linear, left top, left bottom, from(#fafcfd), to(#f0f2f3));
	background: -moz-linear-gradient(#fafcfd, #f0f2f3);
	background: -ms-linear-gradient(#fafcfd, #f0f2f3);
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #fafcfd), color-stop(100%, #f0f2f3));
	background: -webkit-linear-gradient(#fafcfd, #f0f2f3);
	background: -o-linear-gradient(#fafcfd, #f0f2f3);
	filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#fafcfd', endColorstr='#f0f2f3', GradientType=0);
	-ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorstr='#fafcfd', endColorstr='#f0f2f3', GradientType=0)";
	background: linear-gradient(#fafcfd, #f0f2f3);
	box-shadow: 0 1px 0 rgba(255, 255, 255, 0.6), 0 1px 0 rgba(255, 255, 255, 0.5) inset, 0 0 0 1px rgba(255, 255, 255, 0.25) inset;
	border: 1px solid #b6babf;
	-webkit-border-top-left-radius: 3px;
	-webkit-border-top-right-radius: 3px;
	-webkit-border-bottom-right-radius: 3px;
	-webkit-border-bottom-left-radius: 3px;
	-moz-border-radius-topleft: 3px;
	-moz-border-radius-topright: 3px;
	-moz-border-radius-bottomright: 3px;
	-moz-border-radius-bottomleft: 3px;
	border-top-left-radius: 3px;
	border-top-right-radius: 3px;
	border-bottom-right-radius: 3px;
	border-bottom-left-radius: 3px;
	-moz-background-clip: padding;
	-webkit-background-clip: padding-box;
	background-clip: padding-box;
	color: #626A73;
	padding: 3px 6px 3px 8px;
	cursor: pointer;
	font-size: 10px;
	font: normal 13px/15px Arial, Helvetica, sans-serif;
	position: relative;
	white-space: nowrap;
}

#dp_login dd input.text:focus {
	-moz-box-shadow: 0px 0px 8px rgba(0,0,0, 0.2);
	-webkit-box-shadow: 0px 0px 8px rgba(0,0,0, 0.2);
	box-shadow: 0px 0px 8px rgba(0,0,0, 0.2);
	border-color: #009CD9;
}

#dp_login dd.password {
	position: relative;
}
#dp_login dd.password input.text {
	padding-right: 35px;
	width: 300px;
}
#dp_login dd.password a {
	position: absolute;
	top: 0px;
	right: -5px;
	font-size: 11px;
	color: #B6BABF;
	text-decoration: none;
}
#dp_login dd.password a:hover {
	color: #000;
	text-decoration: underline;
}

#dp_login p.error {
	color: #8B170C;
	font: normal 9pt/15px Arial, Helvetica, sans-serif;
	margin: 0px 25px 10px 25px;
	text-align: left;

	background-color: #F8D1D7;
	border: 1px solid #B17E81;
	padding: 5px;
}

#dp_login p.okay {
	color: #227434;
	font: normal 9pt/15px Arial, Helvetica, sans-serif;
	margin: 0px 25px 10px 25px;
	text-align: left;

	background-color: #CBF9C9;
	border: 1px solid #6AA66E;
	padding: 5px;
}

#dp_login p.note {
	color: #37341A;
	font: normal 9pt/15px Arial, Helvetica, sans-serif;
	margin: 0px 25px 10px 25px;
	text-align: left;

	background-color: #FFF692;
	border: 1px solid #B3AC64;
	padding: 5px;
}

br.clear {
	clear: both;
	height: 1px;
	width: 1px;
	overflow: hidden;
}

#lost_explain {
	line-height: 120%;
	font-weight: normal;
	font-size: 11px;
	padding-top: 4px;
}

#lost_explain .code {
	display: block;
	font-family: 'Monaco', 'Courier New', monospace;
	margin-top: 4px;
	padding: 3px;
	overflow: scroll;
	width: 340px;
	white-space: nowrap;
}