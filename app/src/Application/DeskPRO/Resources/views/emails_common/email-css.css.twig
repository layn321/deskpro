a {
	color: #0065A3;
	text-decoration: underline;
}

td {
	padding: 0;
}

span.dp-replycode {
	color:#E8E8E8;
	font-size:1px;
}

body, div, td, p, span {
	font-family: Calibri, Helvetica, Arial, sans-serif;
	line-height: 125%;
	color: #242424;
	font-size: 14px;
}

div.dp-layout-section-header {
	padding-bottom: 2px;
}

h1 {
	font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
	font-size: 16px;
	font-weight: bold;
}

div.dp-spacer {
	font-size:1px;
	padding: 6px;
	height: 6px;
	overflow:hidden;
}

div.dp-hr {
	font-size: 12px;
	line-height: 100%;
	padding: 0;
	margin-top: 15px;
	border-top: 2px solid #C5C5C5;
}

td.dp-layout-bottom, td.dp-layout-bottom span, td.dp-layout-bottom div, td.dp-layout-bottom a, td.dp-layout-bottom td, td.dp-layout-bottom p {
	color: #ABABAB;
}

table.dp-props-table {
	border-left: 1px solid #BABABA;
	border-right: 1px solid #BABABA;
	border-bottom: 1px solid #BABABA;
}

table.dp-props-table td {
	padding: 6px;
	border-top: 1px solid #BABABA;
}

div.dp-author-row {
	color: #ABABAB;
	padding-bottom: 2px;
}

div.dp-quoted-message {
	border-left: 1px solid #00174B;
	color: #00174B;
	line-height:125%;
	padding-left: 8px;
	margin-left: 2px;
}

a.DP_TOP_MARK {
	font-size: 1px;
	text-decoration: none;
	color: #000;
	line-height: 1px;
	height: 1px;
	overflow: hidden;
	margin: 0;
	padding: 0;
	cursor: default;
	display: inline;
	float: right;
}

.dp-rate-box {
	border-radius: 10px;
	-webkit-border-radius: 10px;
	padding: 8px;
	text-align: center;
	background-color: #F3F3F3;
	border: 2px solid #C0C0C0;
}

.dp-rate-box .rate-text a {
	color: #005BFF;
	font-weight: bold;
	text-decoration: underline;
}

.dp-rate-box .rate-icon {
	font-size: 45pt;
	font-weight: normal;
	font-style: normal;
	display: block;
	text-align: center;
	line-height: 54px;
}

.dp-rate-box.dp-positive .rate-icon {
	color: #16B300;
}
.dp-rate-box.dp-negative .rate-icon {
	color: #A21B22;
}
.dp-rate-box.dp-neutral .rate-icon {
	color: #849C96;
}

.rate-link {
	margin-top: 10px;
	font-size: 11px;
	color: #ABABAB;
	font-style: italic;
}

.rate-link a {
	color: #ABABAB;
	text-decoration: none;
	border: 1px solid #DADADA;
	margin-right: 3px;
	border-radius: 3px;
	-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
}

blockquote {
	color: #9D9D9D;
	font-style: italic;
	margin: 10px 10px 10px 40px;
}