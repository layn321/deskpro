{% extends 'AdminBundle:Plugins:config.html.twig' %}
{% block inner_form %}

<div class="setting_field_row">
	<h4>API Configuration</h4>
	<div class="setting_fields">
		<div class="field_row">
			<label>Salesforce User Name</label>
			<input type="text" name="settings[api_user]" value="{{ app.getSetting(plugin.id ~ '.api_user') }}" style="width: 50%; padding: 5px" />
		</div>

		<div class="field_row">
			<label>Salesforce Password</label>
			<input type="password" name="settings[api_password]" value="{{ app.getSetting(plugin.id ~ '.api_password') }}" style="width: 50%; padding: 5px" />
		</div>

		<div class="field_row">
			<label>API Security Token</label>
			<input type="text" name="settings[api_security_token]" value="{{ app.getSetting(plugin.id ~ '.api_security_token') }}" style="width: 50%; padding: 5px" />
			<p>The security token can be generated by going to <i>Your Name &gt; Setup &gt; My Personal Information &gt; Reset My Security Token</i>.</p>
		</div>

	</div>
</div>

<div class="setting_field_row">
	<h4>Widgets</h4>
	<div class="setting_fields">
		<div class="field_row">
			<label><input type="checkbox" name="widget_ticket" value="1" {% if showTicket %}checked="checked"{% endif %} />
				Enable ticket widget</label>
		</div>

		<div class="field_row">
			<label><input type="checkbox" name="widget_profile" value="1" {% if showProfile %}checked="checked"{% endif %} />
				Enable profile widget</label>
		</div>
	</div>
</div>

{% endblock %}